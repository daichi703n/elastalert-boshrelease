set -e

CPUS=`grep -c ^processor /proc/cpuinfo`
PYTHON_VERSION=3.13.1

tar xzf python3.13/Python-${PYTHON_VERSION}.tgz
#sh python3.13/rustup-init.sh
#. "$HOME/.cargo/env"

pushd Python-${PYTHON_VERSION}
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-ensurepip \
    --enable-shared

  make -j${CPUS}
  make install
popd
